@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="panel panel-success">
                <div class="panel-heading">Tea</div>
                <div class="panel-body"><img src="/Images/EnglishBreakfast2.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                <div class="panel-footer">
                @Html.ActionLink("Order Tea", "Index", "Product", new { productTypeID = 1 }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel panel-success">
                <div class="panel-heading">Cake</div>
                <div class="panel-body"><img src="/Images/VictoriaSponge.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                <div class="panel-footer">
                    @Html.ActionLink("Order Cake", "Index", "Product", new { productTypeID = 2 }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="panel panel-success">
                <div class="panel-heading">Tea & Cake</div>
                <div class="panel-body"><img src="/Images/TeaAndCake.jpg" class="img-responsive" style="width:100%" alt="Image"></div>
                <div class="panel-footer">
                    @Html.ActionLink("Order", "Index", "Product","", new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
<br>